{
  "encrypt": {
    "verify": {
      "success": {
        "payload": {
          "plain_text": "my-secret-password"
        }
      },
      "fail": {
        "payload-1": {
          "plain_text": "my-secret-password2"
        },
        "payload-2": {
          "plain_text": ""
        }
      }
    }
  },
  "login": {
    "register": {
      "success": {
        "payload": {
          "email": "dummy@sample.com"
        },
        "expect": {
          "email": "dummy@sample.com"
        },
        "expect_db": {
          "email": "dummy@sample.com",
          "password": null,
          "otp": "*GT0",
          "fail_count": 0,
          "status": "Registered"
        }
      },
      "fail": {
        "payload": {
          "email": ""
        },
        "expect": {
          "status_code": 422
        }
      }
    },

    "initialize": {
      "success": {
        "payload": {
          "email": "dummy@sample.com",
          "otp": "*GET_FROM_DB"
        },
        "expect": {
          "status_code": 200,
          "email": "dummy@sample.com",
          "password": null,
          "otp": null,
          "expired": null,
          "fail_count": 0,
          "status": "Initialized"
        }
      },
      "fail": {
        "payload": {
          "email": "dummy@sample.com",
          "otp": 99999
        },
        "expect": {
          "status_code": 401
        }
      }
    },
    "activate": {
      "success": {
        "payload": {
          "email": "dummy@sample.com",
          "otp": "*GET_FROM_DB",
          "old_password": "Password1!",
          "new_password": "Password2!",
          "new_password_repeated": "Password2!"
        },
        "expect": {
          "status_code": 200,
          "email": "dummy@sample.com",
          "password": "********",
          "otp": null,
          "fail_count": 0,
          "status": "Active"
        }
      },
      "fail": {
        "payload": {
          "email": "dummy@sample.com"
        },
        "expect": {
          "status_code": 422,
          "type": "missing",
          "loc": ["body", "new_password"]
        }
      }
    },
    "login": {
      "success": {
        "payload": {
          "email": "dummy@sample.com",
          "password": "Password2!"
        }
      }
    }
  },
  "password": {
    "reset": {
      "success": {
        "payload": {
          "email": "dummy@sample.com",
          "old_password": "Password1!",
          "new_password": "Password2!",
          "new_password_repeated": "Password2!"
        }
      }
    }
  }
}