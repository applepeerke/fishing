{
  "encrypt": {
      "success": {
        "payload": {
          "plain_text": "my-secret-password"
        }
      },
    "verify": {
      "success": {
        "payload": {
          "plain_text": "my-secret-password"
        }
      },
      "fail": {
        "payload-1": {
          "plain_text": "my-secret-password2"
        },
        "payload-2": {
          "plain_text": ""
        },
        "expect-1": {
          "status_code": 401,
          "detail": "Unauthorized"
        },
        "expect-2": {
          "status_code": 422,
          "loc": ["body", "plain_text"]
        }
      }
    }
  },
  "login": {
    "register": {
      "success": {
        "payload": {
          "email": "dummy@sample.com"
        },
        "expect": {
          "email": "dummy@sample.com"
        },
        "expect_db": {
          "email": "dummy@sample.com",
          "password": "********",
          "expiry": "*GET_OTP_EXPIRY",
          "fail_count": 0,
          "status": 10
        }
      },
      "fail": {
        "payload": {
          "email": ""
        },
        "expect": {
          "status_code": 422
        }
      }
    },
    "activate": {
      "success": {
        "payload": {
          "email": "dummy@sample.com",
          "password": "Password1!",
          "new_password": "Password2!",
          "new_password_repeated": "Password2!"
        },
        "expect": {
          "status_code": 200,
          "email": "dummy@sample.com",
          "password": "Password2!",
          "expired": "*GET_PASSWORD_EXPIRY",
          "fail_count": 0,
          "status": 20
        }
      },
      "fail": {
        "payload": {
          "email": "dummy@sample.com",
          "password": "Password_fail1!"
        },
        "expect": {
          "status_code": 422,
          "type": "missing",
          "loc": ["body", "new_password"]
        }
      }
    },
    "login": {
      "success": {
        "payload": {
          "email": "dummy@sample.com",
